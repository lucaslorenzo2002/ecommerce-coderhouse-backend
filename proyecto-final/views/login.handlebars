<div class="card">
    <div class="card-header">
        inicio de sesion
    </div>
    <div class="card-body">
        <form action="/api/auth/login" method="post">
            <div class="form-group">
              <label for="">Nombre</label>
              <input type="text" class="form-control" name="username" id="nombre" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">Help text</small>
            </div>
            <div class="form-group">
              <label for="">Contrasenia</label>
              <input type="password" class="form-control" name="password" id="contrasenia" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">Help text</small>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesion</button>
        </form>
    </div>
</div>